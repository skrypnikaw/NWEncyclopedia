<Application
    x:Class="NWEncyclopedia.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModel="clr-namespace:NWEncyclopedia.ViewModel"
    xmlns:local="clr-namespace:NWEncyclopedia"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    StartupUri="View/MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Styles/Button.xaml" />
                <ResourceDictionary Source="View/Styles/TextBox.xaml" />
                <ResourceDictionary Source="View/Styles/Expander.xaml" />
                <ResourceDictionary Source="View/Styles/Colors.xaml" />
                <ResourceDictionary Source="View/Styles/StyleTextBlock.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
